<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PregameFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"
                android:text="Prematch"
                android:textColor="@android:color/holo_green_light"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Match #"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/matchnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Team #"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/teamnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No Show"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <Switch
                android:id="@+id/noshow"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lost Comms"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <Switch
                android:id="@+id/lostcomms"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/to_login_page"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="Login Page"
                android:textColor="@color/teamGreen"
                android:background="@android:color/black"/>

            <Button
                android:id="@+id/to_auton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:text="Auton"
                android:background="@color/teamGreen"/>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>