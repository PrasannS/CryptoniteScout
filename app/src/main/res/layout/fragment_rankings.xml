<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rankings">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollviewForRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:text="Team\nNumber"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/scrollGray"
                android:text="Team\nName"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="BaseLine\nPercent"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="Auto\nSwitch\"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="Auton\nScale"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="Teleop\nOwn"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="Teleop\nOppo"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="Teleop\nExchange"
                android:textColor="@android:color/white" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="Teleop\nScale"
                android:textColor="@android:color/white" />


        </LinearLayout>
    </HorizontalScrollView>



</FrameLayout>