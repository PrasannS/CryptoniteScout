<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AutonFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Auton"
                android:textColor="@android:color/holo_green_light"
                android:background="@android:color/black"
                android:textSize="40sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Match #"
                android:textColor="@android:color/black"
                android:background="@android:color/white"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/matchnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Team #"
                android:textColor="@android:color/black"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/teamnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No Show"
                android:textColor="@android:color/black"
                android:textSize="40sp"/>

            <Switch
                android:id="@+id/noshow"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lost Comms"
                android:textColor="@android:color/black"
                android:textSize="40sp"/>

            <Switch
                android:id="@+id/lostcomms"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/auton_prematch"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:text="Prematch"
                android:textColor="@android:color/holo_green_light"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/auton_teleop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textColor="@android:color/black"
                android:text="Teleop"
                android:background="@android:color/holo_green_light"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>